{
  "name": "harris-is-harry-potter",
  "private": true,
  "scripts": {
    "dev": "parcel src/*.html",
    "build": "parcel build src/*.html",
    "postbuild": "cp _redirects dist/",
    "fmt": "prettier --write *.{json.md} 'src/**/*.{css,js}'",
    "lint": "eslint 'src/**/*.js'"
  },
  "devDependencies": {
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "parcel-bundler": "^1.9.7",
    "prettier": "^1.14.2"
  },
  "dependencies": {
    "husky": "^3.0.5",
    "konami": "^1.6.2",
    "lint-staged": "^9.2.5",
    "modern-normalize": "^0.5.0",
    "typed.js": "^2.0.9"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": 9
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "semi": false
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ],
    "*.{css,md,json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
